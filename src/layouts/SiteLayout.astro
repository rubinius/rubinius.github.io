---
import "@/styles/tailwind.css";
import ThemeBoot from "@/components/ThemeBoot.astro";
import Header from "@/components/SiteHeader.astro";
import Footer from "@/components/SiteFooter.astro";
import Analytics from "@/components/Analytics.astro";

const {
  title = "Rubinius",
  description = "The Rubinius language platform.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <ThemeBoot />
  </head>

  <body class="min-h-dvh flex flex-col antialiased">
    <!-- Single outer box for consistent width across header/main/footer -->
    <div class="mx-auto w-full max-w-7xl px-4 flex flex-1 flex-col">
      <Header />

      <main class="flex-1 py-10">
        <slot />
      </main>

      <Footer />
    </div>
    <Analytics />
  </body>
</html>
