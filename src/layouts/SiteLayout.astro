---
import Header from '@/components/SiteHeader.astro';
import Footer from '@/components/SiteFooter.astro';

const { title = 'Rubinius' } = Astro.props;
---

<html lang="en" class="h-full bg-slate-950 text-slate-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    {/* single width-controlled container */}
    <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex-1 flex flex-col gap-6 py-6">
      <Header />

      <main class="flex-1">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
