---
const {
  title = "Vivarium AI",
  description = "An experimental world for AI",
} = Astro.props;
---

<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {title && <title>{title}</title>}
    {description && <meta name="description" content={description} />}
  </head>
  <body class="min-h-screen bg-white text-slate-900 antialiased flex flex-col">
    <header class="border-b bg-white/70 backdrop-blur">
      <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between gap-6">
        <a href="/" class="font-semibold tracking-tight text-slate-900">
          Vivarium AI
        </a>
        <nav class="flex items-center gap-4 text-sm font-medium text-slate-700">
          <a href="/blog/" class="hover:text-slate-900">Blog</a>
          <a href="/newsletters/" class="hover:text-slate-900">Newsletters</a>
          <a href="/docs/" class="hover:text-slate-900">Docs</a>
          <a href="/reference/" class="hover:text-slate-900">Reference</a>
        </nav>
      </div>
    </header>

    <main class="flex-1">
      <div class="mx-auto max-w-6xl px-4 py-8">
        <slot />
      </div>
    </main>

    <footer class="border-t py-6 text-center text-sm text-slate-500">
      Vivarium AI Â· {new Date().getFullYear()}
    </footer>
  </body>
</html>
