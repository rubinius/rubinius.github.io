---
import SiteLayout from '@/layouts/SiteLayout.astro';
---

<SiteLayout title="Rubinius">
  <section class="py-16 text-center">
    <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
      Welcome to Rubinius
    </h1>
    <div class="mt-8 flex justify-center gap-4">
      <a
        href="/docs"
        class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-100 text-sm font-medium"
      >
        Get Started
      </a>
      <a
        href="/blog"
        class="px-4 py-2 rounded-lg border border-slate-700 hover:border-slate-500 text-slate-300 text-sm font-medium"
      >
        Read the Blog
      </a>
    </div>
  </section>
</SiteLayout>
